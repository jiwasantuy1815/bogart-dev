{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "firebox/radio",
  "version": "1.0.0",
  "title": "Radio Field",
  "description": "Add a radio field into your form.",
  "category": "firebox",
  "parent": [
    "firebox/form",
    "firebox/column",
    "firebox/row",
    "core/group"
  ],
  "keywords": [
    "radio",
    "radio field"
  ],
  "attributes": {
    "uniqueId": {
      "type": "string",
      "default": ""
    },
    "fieldLabelRequiredFieldIndication": {
      "type": "boolean",
      "default": true
    },
    "fieldName": {
      "type": "string",
      "default": "radio"
    },
    "fieldLabel": {
      "type": "string",
      "default": "Radio Field"
    },
    "fieldLabelFontWeight": {
      "type": "string",
      "default": ""
    },
    "helpText": {
      "type": "string",
      "default": ""
    },
    "required": {
      "type": "boolean",
      "default": true
    },
    "width": {
      "type": "string",
      "default": "100%"
    },
    "choiceLayout": {
      "type": "string",
      "default": "auto"
    },
    "size": {
      "type": "string",
      "default": "small"
    },
    "sizeCustom": {
      "type": "integer",
      "default": ""
    },
    "displayFormat": {
      "type": "string",
      "default": ""
    },
    "imagePadding": {
      "type": "object",
      "default": {
        "desktop": {
          "top": "",
          "right": "",
          "bottom": "",
          "left": ""
        },
        "tablet": {
          "top": "",
          "right": "",
          "bottom": "",
          "left": ""
        },
        "mobile": {
          "top": "",
          "right": "",
          "bottom": "",
          "left": ""
        },
        "linked": true
      }
    },
    "checkedBorderSize": {
      "type": "integer",
      "default": 2
    },
    "checkedBorderColor": {
      "type": "string",
      "default": "#057eff"
    },
    "hideCheckmark": {
      "type": "boolean",
      "default": false
    },
    "checkedBackgroundColor": {
      "type": "string",
      "default": "#057eff"
    },
    "checkedTextColor": {
      "type": "string",
      "default": "#fff"
    },
    "imageLabels": {
      "type": "boolean",
      "default": true
    },
    "defaultValue": {
      "type": "string",
      "default": ""
    },
    "placeholder": {
      "type": "string",
      "default": ""
    },
    "cssClass": {
      "type": "string",
      "default": ""
    },
    "inputCssClass": {
      "type": "string",
      "default": ""
    },
    "hideLabel": {
      "type": "boolean",
      "default": false
    },
    "disableBrowserAutocomplete": {
      "type": "boolean",
      "default": false
    },
    "choices": {
      "type": "array",
      "default": [
        {
          "id": 1,
          "default": true,
          "value": 1,
          "label": "Choice 1",
          "image": ""
        },
        {
          "id": 2,
          "default": false,
          "value": 2,
          "label": "Choice 2",
          "image": ""
        },
        {
          "id": 3,
          "default": false,
          "value": 3,
          "label": "Choice 3",
          "image": ""
        }
      ]
    }
  },
  "editorScript": "file:./index.js"
}